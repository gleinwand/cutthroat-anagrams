<div id='user-word-container-<%= userId %>'>
	<%= username %>
	<span id='user-status-<%= userId %>' class='user-status status-<%= userStatus %>'>
		(<%= userStatus %>)
	</span>
	<div class='words-container' id='user-<%= userId %>'>
	<% for (var i=0; i<words.length; i++) { %>
		<%= wordTemplate({ word: words[i] }) %>
	<% } %>
	</div>
</div>
